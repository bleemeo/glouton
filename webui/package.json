{
  "name": "glouton-panel",
  "version": "0.0.1",
  "description": "UI for local Glouton",
  "browserslist": [
    "defaults",
    "last 5 year",
    "firefox 45"
  ],
  "scripts": {
    "start": "vite --host 0.0.0.0",
    "build": "pnpm run clean && vite build --mode production",
    "deploy": "pnpm run build && mkdir -p ../api/assets/ && for f in $(find ./dist/assets -name '*.css'); do cat $f | gzip > ../api/assets/$(basename $f); done && for f in $(find ./dist/assets -name '*.js'); do cat $f | gzip > ../api/assets/$(basename $f); done",
    "clean": "rm -rf dist",
    "lint": "tsc -b && eslint src && echo '\nRunning typescript check...' && tsc -b && pnpm run knip && pnpm audit && pnpm run show-success",
    "show-success": "echo '\nðŸŽ‰ Everything is good, no linter issue ðŸŽ‰'",
    "prettify": "prettier --write 'src/'",
    "knip": "knip --tsConfig tsconfig.app.json"
  },
  "author": "Tom Darneix",
  "license": "ISC",
  "dependencies": {
    "@chakra-ui/react": "^3.30.0",
    "@tanstack/react-table": "^8.21.3",
    "@types/lodash-es": "^4.17.12",
    "axios": "^1.13.2",
    "bootstrap": "^5.3.8",
    "core-js": "^3.47.0",
    "d3": "^7.9.0",
    "echarts": "^6.0.0",
    "lodash-es": "^4.17.22",
    "next-themes": "^0.4.6",
    "rc-switch": "^4.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-router": "^7.11.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/d3": "^7.4.3",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "knip": "^5.79.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "sass-embedded": "^1.97.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3"
  }
}
