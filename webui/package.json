{
  "name": "glouton-panel",
  "version": "0.0.1",
  "description": "UI for local Glouton",
  "browserslist": [
    "defaults",
    "last 5 year",
    "firefox 45"
  ],
  "scripts": {
    "start": "vite --host 0.0.0.0",
    "build": "npm run clean && vite build --mode production",
    "deploy": "npm run build && mkdir -p ../api/assets/ && for f in $(find ./dist/assets -name '*.css'); do cat $f | gzip > ../api/assets/$(basename $f); done && for f in $(find ./dist/assets -name '*.js'); do cat $f | gzip > ../api/assets/$(basename $f); done",
    "clean": "rm -rf dist",
    "lint": "tsc -b && eslint src && echo '\nRunning typescript check...' && tsc -b && npm run knip && npm audit && npm run show-success",
    "show-success": "echo '\nðŸŽ‰ Everything is good, no linter issue ðŸŽ‰'",
    "prettify": "prettier --write 'src/'",
    "knip": "knip --tsConfig tsconfig.app.json"
  },
  "author": "Tom Darneix",
  "license": "ISC",
  "dependencies": {
    "@chakra-ui/react": "^3.27.0",
    "@tanstack/react-table": "^8.21.3",
    "@types/lodash-es": "^4.17.12",
    "axios": "^1.12.2",
    "bootstrap": "^5.3.8",
    "core-js": "^3.45.1",
    "d3": "^7.9.0",
    "echarts": "^6.0.0",
    "lodash-es": "^4.17.21",
    "next-themes": "^0.4.6",
    "rc-switch": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router": "^7.9.1",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "knip": "^5.64.1",
    "prettier": "^3.6.2",
    "sass": "1.93.0",
    "sass-embedded": "^1.93.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
